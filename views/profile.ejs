    <div class="spleft">
        <h1 style="margin: 50px 200px; font: 900 3vmax 'gilroy';"><%=user.username%></h1>
        <div style="display: flex;">
        <h2 style="margin-left:200px;font: 300 1vmax 'gilroy';"><a href="" style=" color: black ;">Home</a></h2>
